[package]
name = "{{project_name}}"
version = "{{project_version}}"
edition = "{{project_edition}}"
publish = false

[profile.release]
codegen-units = 1
lto = true
strip = true
debug = false
panic = "abort"

[dependencies]
anyhow = "1.0"
serde = "1.0"
serde_json = "1.0"
spring = "0.4"
{{ 'spring-opentelemetry = "0.4"' if 'open-telemetry' in features }}
{% if 'sea-orm' in features -%}
spring-sea-orm = { version = "0.4", features = ["postgres","with-web",] }
migration = { path = "migration" }
sea-orm = { version = "1.1.4", features = ["sqlx-postgres","runtime-tokio-rustls","macros","with-uuid","with-chrono"] }
chrono = { version = "0.4", features = ["serde"] }
uuid = { version = "1.13", features = ["v4", "serde","fast-rng"] }
bon = "3.3"
{% endif -%}
{{ 'spring-web = "0.4"' if 'rest' in features -}}
{% if 'grpc' in features -%}
spring-grpc = "0.4"
prost = "0.13"
tonic = "0.13"
prost-types = "0.13"
{% endif -%}
vite-rs = "0.2.1"
vite-rs-axum-0-8 = "0.2.1"
spring-web = { version = "0.4",features = ["default","http2"] }
tokio = { version = "1.44", features = ["full", "tracing"] }

{% if 'grpc' in features -%}
[build-dependencies]
tonic-build = "0.13"
{% endif -%}