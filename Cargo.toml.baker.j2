[package]
name = "{{project_name}}"
version = "{{project_version}}"
edition = "{{project_edition}}"
publish = false

[profile.release]
codegen-units = 1
lto = true
strip = true
debug = false
panic = "abort"

[dependencies]
axum = { version = "0.8" }
anyhow = "1.0"
hyper = "1.6"
serde = "1.0"
serde_json = "1.0"
spring = "0.4"
{{ 'spring-opentelemetry = "0.4"' if 'open-telemetry' in features }}
{% if database=='postgres' -%}
spring-sea-orm = { version = "0.4", features = ["postgres","with-web",] }
migration = { path = "migration" }
sea-orm = { version = "1.1", features = ["sqlx-postgres","runtime-tokio-rustls","macros","with-chrono","with-json","with-uuid"] }
chrono = { version = "0.4", features = ["serde"] }
uuid = { version = "1.17", features = ["v4", "serde","fast-rng"] }
crudcrate = { version = "0.5", features = ["postgresql","sqlite"] }
crudcrate-derive = { version = "0.5" }
utoipa = { version = "5.4", features = ["axum_extras", "uuid", "chrono"] }
utoipa-axum = "0.2"
utoipa-scalar = { version = "0.3", features = ["axum"] }
{% endif -%}
{{ 'spring-web = "0.4"' if 'rest'==protocol or 'none'!=frontend_framework -}}
{% if 'grpc'==protocol -%}
spring-grpc = "0.4"
prost = "0.13"
tonic = "0.13"
prost-types = "0.13"
{% endif -%}
tokio = { version = "1.47", features = ["full", "tracing"] }

{% if 'grpc'==protocol -%}
[build-dependencies]
tonic-build = "0.13"
{% endif -%}
