[workspace]
resolver = "2"
members = [
    {%if database=='postgres'%}"crates/models",{% endif %}
    "crates/api",
    "crates/server",
]

[workspace.package]
version = "{{project_version}}"
edition = "{{project_edition}}"
publish = false

[profile.release]
codegen-units = 1
lto = true
strip = true
debug = false
panic = "abort"
