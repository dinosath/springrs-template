apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ project_name | kebab_case }}-deployment
  labels:
    app: {{ project_name | kebab_case }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ project_name | kebab_case }}
  template:
    metadata:
      labels:
        app: {{ project_name | kebab_case }}
    spec:
      containers:
        - name: {{ project_name | kebab_case }}
          image: "{% raw %}{{ .Values.image.repository }}:{{ .Values.image.tag }}{% endraw %}"
          ports:
            - containerPort: {% raw %}{{ .Values.service.port }}{% endraw %}