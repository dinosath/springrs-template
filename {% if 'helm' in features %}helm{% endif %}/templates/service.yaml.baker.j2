apiVersion: v1
kind: Service
metadata:
  name: {{ project_name | kebab_case }}-service
  labels:
    app: {{ project_name | kebab_case }}
spec:
  type: {% raw %}{{ .Values.service.type }}{% endraw %}
  selector:
    app: {{ project_name | kebab_case }}
  ports:
    - port: {% raw %}{{ .Values.service.port }}{% endraw %}
      targetPort: {% raw %}{{ .Values.service.port }}{% endraw %}
      protocol: TCP